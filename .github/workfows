name: Deploy code to GCE

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest

    permissions:
      id-token: write
      contents: read

    steps:
    - name: 'Checkout code'
      uses: 'actions/checkout@v2'

    - name: 'Authenticate with GCP'
      id: auth
      uses: 'google-github-actions/auth@v2'
      with:
        project_id: 'binar-project-441108'
        workload_identity_provider: 'projects/469833925357/locations/global/workloadIdentityPools/github-action/attribute.repository/WahyuPinanda/art_gallery'

    - name: 'Set up Cloud SDK'
      uses: 'google-github-actions/setup-gcloud@v2'

    - name: 'Start Compute Engine Instance'
      run: |
        gcloud compute instances start art-galery --asia-southeast2-a

    - name: 'Configure SSH'
      run: |
        mkdir -p ~/.ssh
        echo "${{ secrets.SSH_PRIVATE_KEY }}" > ~/.ssh/id_rsa
        chmod 600 ~/.ssh/id_rsa
        echo "${{ secrets.SSH_PUBLIC_KEY }}" > ~/.ssh/id_rsa.pub
        chmod 644 ~/.ssh/id_rsa.pub
        ssh-keyscan -H 34.101.244.5 >> ~/.ssh/known_hosts
